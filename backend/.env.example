# Environment Configuration
ENVIRONMENT=development
DEBUG=True

# API Settings
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/image_classification_db

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# Google Cloud Settings (optional)
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_CREDENTIALS=

# Model Settings
# DEFAULT_MODEL options:
#   - "auto" : Automatically select best available model (recommended)
#   - "mobilenet_v2" : TensorFlow MobileNetV2 (fast, accurate)
#   - "resnet50" : TensorFlow ResNet50 (high accuracy)
#   - "resnet18_torch" : PyTorch ResNet18
#   - "google_vision" : Google Cloud Vision API
#   - "mock" : Development/testing mock model (5 classes only)
DEFAULT_MODEL=auto
CONFIDENCE_THRESHOLD=0.5

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30